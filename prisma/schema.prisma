generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url = "file:./dev.db"
}

model UserLog {
    id        Int      @id @default(autoincrement())
    userId    Int
    user      User     @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
    userAgent String?
    action    String?
}

model User {
    id   Int @id @default(autoincrement())
    name String
    logs UserLog[]
}